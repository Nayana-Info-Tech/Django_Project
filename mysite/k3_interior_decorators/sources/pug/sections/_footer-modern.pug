footer.footer-modern
  .container
    .footer-modern__layer.footer-modern__layer_top
      a.brand(href='index.html')
        +png(logoDefault)

      ul.list-nav
        li(class={active: activeIndex == 0}): a(href='index.html') Home
        li(class={active: activeIndex == 1}): a(href='about.html') About
        li(class={active: activeIndex == 2}): a(href='services.html') Services
        li(class={active: activeIndex == 3}): a(href='projects.html') Projects
        li(class={active: activeIndex == 5}): a(href='classic-blog.html') Blog
        li(class={active: activeIndex == 6}): a(href='contacts.html') Contacts
        
      ul.list-inline-xxs.footer-modern__list
        li: a.icon.icon-xxs.icon-primary.fa.fa-facebook(href='#')
        li: a.icon.icon-xxs.icon-primary.fa.fa-twitter(href='#')
        li: a.icon.icon-xxs.icon-primary.fa.fa-google-plus(href='#')
        li: a.icon.icon-xxs.icon-primary.fa.fa-vimeo(href='#')
        li: a.icon.icon-xxs.icon-primary.fa.fa-youtube(href='#')
        li: a.icon.icon-xxs.icon-primary.fa.fa-pinterest(href='#')

    .footer-modern__layer.footer-modern__layer_bottom
      p.rights
        span!=brandName
        span &nbsp;
        span(class="copyright-year")
        | .
        a(href='privacy-policy.html') Terms of Use and Privacy Policy

      ul.list-bordered
        li
          dl.list-terms-minimal
            dt Address
            dd 4578 Marmora Road, Glasgow, D04 89GR

        li
          dl.list-terms-minimal
            dt Phones
            dd: ul.list-semicolon
              li: a(href='tel:#') (800) 123-0045
              li: a(href='tel:#') (800) 123-0045

        li
          dl.list-terms-minimal
            dt E-mail
            dd: a(href='mailto:#') info@demolink.org