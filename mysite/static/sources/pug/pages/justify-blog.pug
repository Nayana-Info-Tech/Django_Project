extends  ../_skeleton

//- Includes
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
  - var activeIndex = 6
  - var pageName = 'Justify Blog'

block page
  // Page header
  include ../sections/_header-default 
    
  // Parallax header
  include ../elements/_ui-parallax
  section.bg-gray-dark
    +parallax({
      "attrType": "media",
      "src": "images/parallax-3.jpg",
      "htmlSpeed": "0.1",
      "class": ['parallax-header']
    })
      .parallax-header__inner: .parallax-header__content
        .container
          .row.justify-content-sm-center
            .col-md-10.col-xl-8
              h2.heading-decorated=pageName 

  section.bg-default.section-md
    .container
      .row: .col-sm-12.text-center: h4.heading-decorated Blog 
      .row.row-60
        .col-md-6.col-lg-4
          // Post classic
          article.post-classic.post-minimal
            +jpg('blog-image-1-886x668')

            .post-classic-title.post-classic-title-icon.linear-icon-star
              h6: a(href=postImage) The Answer to a Satisfying Sectional Experience

            .post-meta
              .group
                a(href=postImage): time(datetime='2017') Jan.20, 2017
                a(href=postImage).meta-author by Brian Williamson

            .post-classic-body
              p Inorganic pigments are typically used to meet high performance requirements but typically include fewer bright colors.

        .col-md-6.col-lg-8
          // Post slider
          article.post-slider.post-minimal

            +slider-blog({
              class: 'carousel-blog-post-minimal',
              items: [
                {
                  original_img: 'project-category-1-original-1200x800',
                  img_thumb: 'project-category-1-original-1200x800'
                },
                {
                  original_img: 'project-category-2-original-1200x800',
                  img_thumb: 'project-category-2-original-1200x800'
                },
                {
                  original_img: 'project-category-3-original-1200x800',
                  img_thumb: 'project-category-3-original-1200x800'
                }
              ]
            })

          .post-classic-title
            h6: a(href=postSlider) How to Improve Your Lighting at Home

          .post-meta
            .group
              a(href=postSlider): time(datetime='2017') Jan.20, 2017
              a(href=postSlider).meta-author by Brian Williamson

          .post-classic-body
            p By improving the physical layout of hospitals and medical facilities, we can enhance and increase safety mechanisms, improve care, and…

        .col-md-6.col-lg-7.col-xl-8
          // Post video
          article.post-video.post-minimal.post-video-wrap
            .entry-video.embed-responsive.embed-responsive-16by9
              iframe(width='886', height='320', src=videoSrc, allowfullscreen='')

            .post-classic-title
              h6: a(href=postVideo) Space Saving Ideas For Your Home

            .post-meta
              .group
                a(href=postVideo): time(datetime='2017') Jan.20, 2017
                a(href=postVideo).meta-author by Brian Williamson

            .post-classic-body
              p Fluor Corp., The Walsh Group, and Hensel Phelps top Building Design+Construction’s annual ranking of the nation’s largest military sector construction and construction management firms, as reported in the 2017 Giants 300 Report.

        .col-md-6.col-lg-5.col-xl-4
          // Post classic
          article.post-minimal
            +jpg('blog-image-4-415x315')
            .post-classic-title
              h6: a(href=postImage) The Best Ceiling Colours

            .post-meta
              .group-xs
                a(href=postImage): time(datetime='2017') Jan.20, 2017
                a(href=postImage).meta-author by Brian Williamson
                a(href=postImage) 3 comment(s)
                +tag-list({
                  list_class: 'list-inline-tag',
                  href: postImage,
                  items: [
                    "Industry News"]
                })

            .post-classic-body
              p AECOM, Thornton Tomasetti, and ME Engineers top Building Design+Construction’s annual ranking of the nation’s largest sports facility sector engineering and…

        .col-md-6.col-xl-4
          // Post Link
          article.post-link
